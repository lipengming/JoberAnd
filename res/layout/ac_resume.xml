<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- 列表视图 -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff4f4f4"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_bg"
            android:gravity="center"
            android:text="个人简历"
            android:textColor="@color/black"
            android:textSize="20dip"
            android:textStyle="bold" />
        
        <ListView android:id="@+id/resume_listview" 
		    android:divider="@drawable/divider_horizontal_timeline" 
		    android:dividerHeight="1.0dip" 
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"/>
           
        <!-- 详细内容视图 -->
      <LinearLayout
               xmlns:android="http://schemas.android.com/apk/res/android"
               android:layout_width="fill_parent"
               android:layout_height="match_parent"
               android:background="#ffc0c0c0"
               android:visibility="gone"
               android:id="@+id/resume_detail_view"
               android:orientation="vertical" >
               
               <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip" >
                	<TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:gravity="left"
			            android:text="姓名:"
			            android:textColor="@color/black"
			            android:textSize="10dip"
			            android:textStyle="bold" />
                	
                	<EditText
                	    android:id="@+id/resume_name"
                	    android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:gravity="right"
                	    />
                </LinearLayout>
                
               <!-- 邮箱 -->
                 <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip" >
                	<TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:gravity="left"
			            android:text="邮箱:"
			            android:textColor="@color/black"
			            android:textSize="10dip"
			            android:textStyle="bold" />
                	
                	<EditText
                	    android:id="@+id/resume_emailbox"
                	    android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:gravity="right"
                	    />
                </LinearLayout>
                <!-- 电话号码 -->
                 <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip" >
                	<TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:gravity="left"
			            android:text="电话号码:"
			            android:textColor="@color/black"
			            android:textSize="10dip"
			            android:textStyle="bold" />
                	
                	<EditText
                	    android:id="@+id/resume_phoneno"
                	    android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:gravity="right"
                	    />
                </LinearLayout>
                
                <!-- 工作年限 -->
                 <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip" >
                	<TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:gravity="left"
			            android:text="工作年限 :"
			            android:textColor="@color/black"
			            android:textSize="10dip"
			            android:textStyle="bold" />
                	
                	<EditText
                	    android:id="@+id/resume_workyears"
                	    android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:gravity="right"
                	    />
                </LinearLayout>
                
                <!--最高学历 -->
                <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip" >
                	<TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:gravity="left"
			            android:text="最高学历:"
			            android:textColor="@color/black"
			            android:textSize="10dip"
			            android:textStyle="bold" />
                	
                	<EditText
                	    android:id="@+id/resume_edubackend"
                	    android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:gravity="right"
                	    />
                </LinearLayout>
               
                <!--工作经历-->
                <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip" >
                	<TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:gravity="left"
			            android:text="工作经历:"
			            android:textColor="@color/black"
			            android:textSize="10dip"
			            android:textStyle="bold" />
                	
                	<EditText
                	    android:id="@+id/resume_workhistory"
                	    android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:gravity="right"
			            android:inputType="textMultiLine" 
			            android:lines="5"
                	    />
                </LinearLayout>
	       		   <!-- button -->
                <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip" >
                       <Button
	             	android:id="@+id/resume_submit"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="center"
		            android:text="保存数据"
		            android:textColor="@color/black"
		            android:textSize="15dip"
		            android:textStyle="bold" />
	        		<Button
	             	android:id="@+id/resume_back_list"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="center"
		            android:text="回到列表"
		            android:textColor="@color/black"
		            android:textSize="15dip"
		            android:textStyle="bold" />
                 </LinearLayout>
     </LinearLayout>
	
    </LinearLayout>
</LinearLayout>